{
  "_comment": "OpenClaw 設定範例 - 包含 OneSearch MCP 整合",
  "meta": {
    "lastTouchedVersion": "2026.1.30",
    "lastTouchedAt": "2026-02-04T02:17:23.621Z"
  },
  "models": {
    "mode": "merge",
    "providers": {
      "HodlAI": {
        "baseUrl": "https://api.hodlai.fun/v1",
        "apiKey": "your-api-key",
        "api": "openai-completions",
        "models": [
          {
            "id": "kimi-k2.5",
            "name": "kimi-k2.5",
            "reasoning": true,
            "input": ["text", "image"],
            "cost": {
              "input": 0.5,
              "output": 0.5,
              "cacheRead": 0,
              "cacheWrite": 0
            },
            "contextWindow": 2097152,
            "maxTokens": 131072
          }
        ]
      }
    }
  },
  "agents": {
    "defaults": {
      "model": {
        "primary": "HodlAI/kimi-k2.5"
      },
      "workspace": "/home/node/.openclaw/workspace",
      "userTimezone": "Asia/Hong_Kong",
      "cliBackends": {
        "ddg-search": {
          "command": "node",
          "args": [
            "/home/node/.openclaw/workspace/skills/duckduckgo-search/scripts/ddg-search.js",
            "--stdin",
            "-l",
            "10"
          ],
          "output": "json",
          "input": "stdin"
        },
        "one-search-mcp": {
          "command": "node",
          "args": [
            "/home/node/.openclaw/workspace/skills/one-search-mcp/scripts/one-search-wrapper-simple.js",
            "--stdin"
          ],
          "output": "json",
          "input": "stdin",
          "env": {
            "SEARCH_PROVIDER": "duckduckgo"
          }
        },
        "one-search-mcp-tavily": {
          "command": "node",
          "args": [
            "/home/node/.openclaw/workspace/skills/one-search-mcp/scripts/one-search-wrapper-simple.js",
            "--stdin"
          ],
          "output": "json",
          "input": "stdin",
          "env": {
            "SEARCH_PROVIDER": "tavily",
            "SEARCH_API_KEY": "your-tavily-api-key"
          }
        }
      }
    }
  },
  "tools": {
    "web": {
      "search": {
        "enabled": false,
        "provider": "brave",
        "apiKey": ""
      },
      "fetch": {
        "enabled": true
      }
    },
    "exec": {
      "security": "full",
      "ask": "off"
    }
  },
  "gateway": {
    "port": 18789,
    "mode": "local",
    "bind": "loopback",
    "auth": {
      "mode": "token",
      "token": "your-token"
    }
  }
}
